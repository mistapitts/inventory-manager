{
  "name": "inventory-manager",
  "version": "1.0.0",
  "description": "Inventory Maintenance and Calibration Management System",
  "main": "dist/server.js",
  "scripts": {
    "ensure-types": "npm i --no-save @types/node @types/express @types/cors @types/jsonwebtoken @types/bcryptjs @types/multer @types/qrcode",
    "build": "npm run ensure-types && tsc",
    "postinstall": "npm run ensure-types || true",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "vercel-build": "npm run build",
    "prepare": "echo skip",
    "backup:db": "node scripts/backup-db.js",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "engines": {
    "node": ">=18 <23"
  },
  "keywords": [
    "inventory",
    "calibration",
    "maintenance",
    "management"
  ],
  "author": "Mista Pitts",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.55.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.11",
    "@types/nodemailer": "^7.0.1",
    "@types/qrcode": "^1.5.5",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mime": "^4.0.7",
    "multer": "^2.0.2",
    "nodemailer": "^6.10.1",
    "qrcode": "^1.5.3",
    "sharp": "^0.32.6",
    "sqlite3": "^5.1.6",
    "typescript": "^5.2.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2"
  }
}
