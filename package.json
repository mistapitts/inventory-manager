{
  "name": "inventory-manager",
  "version": "1.0.0",
  "description": "Inventory Maintenance and Calibration Management System",
  "main": "dist/server.js",
  "scripts": {
    "ensure-types": "npm i --no-save @types/node @types/express @types/cors @types/jsonwebtoken @types/bcryptjs @types/multer @types/qrcode",
    "build": "npm run ensure-types && tsc",
    "postinstall": "npm run ensure-types || true",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "vercel-build": "npm run build",
    "prepare": "echo skip",
    "backup:db": "node scripts/backup-db.js"
  },
  "engines": {
    "node": ">=18 <23"
  },
  "keywords": [
    "inventory",
    "calibration",
    "maintenance",
    "management"
  ],
  "author": "Mista Pitts",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.55.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.7",
    "qrcode": "^1.5.3",
    "sharp": "^0.32.6",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.11",
    "@types/qrcode": "^1.5.5",
    "nodemon": "^3.0.2",
    "typescript": "^5.2.2"
  }
}
